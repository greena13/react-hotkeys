{
  "env": {
    "development": {
      "presets": [
        "es2015",
        "react",
        "stage-2"
      ]
    },

    "es-development": {
      "presets": [
        "react",
        "stage-2"
      ]
    },

    "umd-development": {
      "presets": [
        [
          "es2015",
          {
            "modules": false
          }
        ],
        "react",
        "stage-2"
      ],
      "plugins": [
        "external-helpers"
      ]
    },

    "test": {
      "presets": [
        "es2015"
      ],

      "sourceMaps": "inline"
    },

    "production": {
      "presets": [
        [
          "es2015",
          {
            "modules": false
          }
        ],
        "react",
        "stage-2"
      ],
      "plugins": [
        "external-helpers",
        "remove-comments"
      ]
    }
  }
}
